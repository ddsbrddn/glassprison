<%= form_for @blog do |f| %>
	<% if @blog.errors.any? %>
		<div id="errors">
			<h4><%= pluralize(@blog.errors.count, "error") %> prevented this post from saving</h4>
			<ul>
				<% @blog.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label "Title" %>
		<%= f.text_field :title %>
	</div>
	<div class="form-group">
		<%= f.label "body" %>
		<%= f.text_area :body %>
	</div>

	<%= f.submit "Publish Post", class: "btn btn-primary" %>
<% end %>
