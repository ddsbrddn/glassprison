<% if logged_in? %>
  <div class="row">
    <div class= "col-md-8 col-md-offset-2">
      <div class="row">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </div>
      <h3>Micropost Feed</h3>

      <ol class="microposts">
    <%  @microposts.each do |micropost| %>
      <li id="micropost-<%= micropost.id %>" class="col-md-4">
        <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
        <span class="content" style="margin-left: 0;">
          <%= link_to image_tag(micropost.picture.url, class: "img-responsive"), "microposts/#{micropost.id}" if micropost.picture? %>
        </span>
        <span class="timestamp">
          Posted <%= time_ago_in_words(micropost.created_at) %> ago.
          <p><%= micropost.comments.count %> Comments</p>
          <% if current_user?(micropost.user) %>
            <%= link_to "delete", micropost, method: :delete,
                                             data: { confirm: "You sure?" } %>
          <% end %>
        </span>
      </li>
      <% end %>
    </ol>

    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <p>Share your inspiration and see what's other inspiring others</p>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-primary" %>
  </div>

  <div id="posts">
    <%= @microposts.each do |micropost| %>
    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag micropost.picture.url), micropost if micropost.picture? %>
      </div>
      <div class="post_content">
        <%= micropost.content %>
        <p><%= micropost.comments.count %> Comments</p>
      </div>
    </div>
    <% end %>
  </div>

<% end %>
