<div class="row">

  <div class="col-md-8 col-md-offset-2">
    <div class="submission-image-container">
      <span class="content">
        <%= image_tag @micropost.picture.url if @micropost.picture? %>
      </span>
    </div>
    <div class="submission-container-footer">
      <p><%= @micropost.content %></p>
      <span class="timestamp">
        Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
        <% if current_user?(@micropost.user) %>
          <%= link_to "delete", @micropost, method: :delete,
                                           data: { confirm: "You sure?" } %>
        <% end %>
        <%= @micropost.get_upvotes.size %>
        <%= link_to "Like", like_micropost_path(@micropost), method: :get %>
        <%= @micropost.get_downvotes.size %>
        <%= link_to "Dislike", dislike_micropost_path(@micropost), method: :get %>
      </span>
    </div>
    <div class="author-block">
      <section class="user_info">
          <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %>
          <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
      </section>
      <section class="stats">
        <%= raw @micropost.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>        

      </section>

    </div>
    <div class="comment_count">
      <%= pluralize(@micropost.comments.count, "Comment") %>
      <% @comments.each do |comment| %>
      <div class="comment">
        <p><%= comment.user.name %></p>
        <p><%= comment.content %></p>
      </div>
      <% end %>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>
