<div class="row">

  <div class="col-md-8 col-md-offset-2">
    <div class="submission-image-container">
      <span class="content">
        <%= image_tag @micropost.picture.url if @micropost.picture? %>
        <%= @micropost.content %>
      </span>
    </div>
    <span class="timestamp">
      Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
      <% if current_user?(@micropost.user) %>
        <%= link_to "delete", @micropost, method: :delete,
                                         data: { confirm: "You sure?" } %>
      <% end %>
    </span>
    <section class="user_info">
          <%= link_to gravatar_for(@micropost.user, size: 50), @micropost.user %>
          <span class="user"><%= link_to @micropost.user.name, @micropost.user %></span>
      </section>
      <section class="stats">

        
    </section>
    <div class="comment_count">
      <%= pluralize(@micropost.comments.count, "Comment") %>
      <%= @micropost.get_upvotes.size %>
      <%= link_to "Like", like_micropost_path(@micropost), method: :get %>
      <%= @micropost.get_downvotes.size %>
      <%= link_to "Dislike", dislike_micropost_path(@micropost), method: :get %>
      <% @comments.each do |comment| %>
      <div class="comment">
        <p><%= comment.user.name %></p>
        <p><%= comment.content %></p>
      </div>
      <% end %>
      <%= render 'comments/form' %>
    </div>
  </div>
</div>
